# Local Deployment Environment Configuration
# This file is used when running the full containerized stack locally

# Environment
NODE_ENV=local

# Database Configuration (SQLite for local development)
DATABASE_URL="file:./database.db"

# Server Configuration
PORT=3000
HOST=localhost

# AWS Configuration for LocalStack
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566

# LocalStack Service Endpoints
AWS_S3_ENDPOINT=http://localhost:4566
AWS_SSM_ENDPOINT=http://localhost:4566
AWS_COGNITO_ENDPOINT=http://localhost:4566

# Local S3 Configuration
S3_BUCKET_NAME=dms-local-bucket

# Cognito Configuration (will be fetched from LocalStack SSM)
COGNITO_USER_POOL_ID=us-east-1_LOCAL123
COGNITO_USER_POOL_CLIENT_ID=local-client-id-123
COGNITO_JWT_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_LOCAL123

# Test Database Configuration
TEST_DATABASE_PROVIDER=sqlite
TEST_DATABASE_URL=file:./test-database.db

# Migration settings
SQLITE_DATABASE_URL="file:./database.db"
DRY_RUN=false
VERBOSE=false
BACKUP_DIR=./backups

# Prisma settings
PRISMA_CLI_QUERY_ENGINE_TYPE=binary

# Logging
LOG_LEVEL=debug

# Development flags
SKIP_AWS_AUTH=true
