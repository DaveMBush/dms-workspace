# Database Configuration
DATABASE_PROVIDER=postgresql
DATABASE_URL=postgresql://username:password@hostname:5432/database_name?schema=public&sslmode=require

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# For production deployments, these will be fetched from AWS Systems Manager
# RMS_DB_PARAMETER_NAME=/rms/dev/database-url
# RMS_DB_PASSWORD_PARAMETER_NAME=/rms/dev/database-password

# Test Database Configuration
TEST_DATABASE_PROVIDER=sqlite
TEST_DATABASE_URL=file:./test-database.db

# Migration settings
SQLITE_DATABASE_URL=file:./database.db
DRY_RUN=false
VERBOSE=false
BACKUP_DIR=./backups

# Prisma settings
PRISMA_CLI_QUERY_ENGINE_TYPE=binary

# Logging
LOG_LEVEL=info