  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via PNPM",
      "request": "launch",
      "runtimeArgs": [
        "start:server",
        "--",
        "--inspect-brk"
      ],
      "runtimeExecutable": "pnpm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "type": "node"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch Edge against localhost",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
